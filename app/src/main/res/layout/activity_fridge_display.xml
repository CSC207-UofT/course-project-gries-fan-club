<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gries.jchefapp.FridgeDisplayActivity">

    <ListView
            android:layout_width="411dp"
            android:layout_height="467dp" android:layout_alignParentEnd="true" android:layout_marginEnd="1dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="-2dp"
            android:layout_alignParentStart="true" android:layout_marginStart="-1dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/enter_ingredient_here"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="57dp"
            android:layout_alignParentTop="true" android:layout_marginTop="59dp"
            android:id="@+id/editTextTextPersonName2"/>
    <Button
            android:text="@string/add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:id="@+id/button6" android:layout_marginTop="57dp"
            android:layout_below="@+id/editTextTextPersonName2"/>
    <Button
            android:text="@string/remove_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_marginEnd="33dp" android:layout_marginTop="55dp"
            android:id="@+id/button9" android:layout_toEndOf="@+id/button6" android:layout_marginStart="25dp"
            android:layout_below="@+id/editTextTextPersonName2"/>
</RelativeLayout>