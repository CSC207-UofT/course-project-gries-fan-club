<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gries.jchefapp.FridgeDisplayActivity">

    <ListView
            android:layout_width="411dp"
            android:layout_height="467dp"
            android:choiceMode="multipleChoice"
            android:layout_alignParentEnd="true" android:layout_marginEnd="1dp"
            android:layout_alignParentStart="true" android:layout_marginStart="-1dp" android:id="@+id/listview1"
            android:layout_marginTop="32dp" android:layout_below="@+id/button6" android:layout_alignParentBottom="true"
            android:layout_marginBottom="9dp"/>
    <EditText
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/enter_ingredient_here"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="57dp"
            android:layout_alignParentTop="true" android:layout_marginTop="32dp"
            android:id="@+id/editTextTextPersonName2" android:layout_alignParentEnd="true"
            android:layout_marginEnd="57dp"/>
    <Button
            android:text="@string/add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="54dp"
            android:id="@+id/button6" android:layout_marginTop="24dp"
            android:layout_below="@+id/editTextTextPersonName2"
            android:layout_alignParentEnd="true" android:layout_marginEnd="60dp"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>