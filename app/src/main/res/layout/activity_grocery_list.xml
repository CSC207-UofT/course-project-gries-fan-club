<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gries.jchefapp.GroceryListActivity">

    <EditText
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/enter_ingredient_here"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_marginStart="30dp"
            android:layout_alignParentTop="true" android:layout_marginTop="51dp"
            android:id="@+id/editTextTextPersonName3" android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp"/>
    <Button
            android:text="@string/add_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="39dp" android:layout_marginTop="27dp"
            android:id="@+id/button2" android:layout_below="@+id/editTextTextPersonName3"
    />
    <Button
            android:text="@string/remove_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp" android:layout_marginTop="26dp"
            android:id="@+id/button10" android:layout_below="@+id/editTextTextPersonName3"
            android:layout_toEndOf="@+id/button2" android:layout_marginStart="18dp"
    />
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentStart="true"
            android:layout_marginStart="1dp" android:layout_marginTop="56dp" android:layout_below="@+id/button10"
            android:id="@+id/listview2"/>
</RelativeLayout>